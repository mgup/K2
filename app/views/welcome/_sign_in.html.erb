<div class="sign-in">
  <%= form_for User.new, url: session_path(:user), data: { abide: true } do |f| %>
    <%= f.hidden_field :remember_me, value: true %>

    <div class="row">
      <div class="small-5 columns">
        <%= f.email_field :email, autofocus: true, required: true,
                          placeholder: 'Электронная почта' %>
      </div>

      <div class="small-5 columns">
        <%= f.password_field :password, autocomplete: 'off', required: true, placeholder: 'Пароль' %>
      </div>

      <div class="small-2 columns">
        <%= f.button class: 'button postfix' do %>
          <i class="fa fa-unlock-alt"></i> Войти
        <% end %>
      </div>
    </div>
  <% end %>
</div>
