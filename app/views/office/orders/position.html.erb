<% if @orders.any? %>
  <table class="table">
    <caption>Уже зарегистрированные документы (± 1)</caption>
    <tbody>
    <% @orders.each do |order| %>
      <tr style="<%= 'font-style: italic;' if order.number.to_s == params[:number] %>">
        <th><%= order.number %></th>
        <td><%= order.full_number %></td>
        <td><%= l(order.date) %></td>
        <td><%= order.title %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
